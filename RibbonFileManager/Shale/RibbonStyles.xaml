                                        <Setter Property="Height" Value="31"/>
                                        <Setter Property="Foreground" Value="{DynamicResource TitlebarIdleForegroundBrush}" />
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="ItemsPanel">
