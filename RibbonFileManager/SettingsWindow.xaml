<win:DecoratableWindow x:Class="RibbonFileManager.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="clr-namespace:Start9.UI.Wpf;assembly=Start9.UI.Wpf"
        xmlns:win="clr-namespace:Start9.UI.Wpf.Windows;assembly=Start9.UI.Wpf"
        xmlns:local="clr-namespace:RibbonFileManager"
        mc:Ignorable="d"
        Title="File Commander Settings" ResizeMode="NoResize" IsVisibleChanged="SettingsWindow_IsVisibleChanged">
    <DockPanel>
        <ContentControl Style="{DynamicResource FooterContentControlStyle}" DockPanel.Dock="Bottom">
            <UniformGrid Columns="4">
                <Button x:Name="Start9SettingsButton" Click="Start9SettingsButton_Click" IsEnabled="False">Start9 Settings</Button>
                <!--tic:AttachedProperties.CornerCurves>
                        <tic:CornerCurves TopLeft="True" TopRight="False" BottomRight="False" BottomLeft="True"/>
                    </tic:AttachedProperties.CornerCurves-->
                <Button x:Name="OkButton" Click="ApplyButton_Click">OK</Button>
                <Button x:Name="CancelButton" IsCancel="True" Click="CancelButton_Click">Cancel</Button>
                <Button x:Name="ApplyButton" Click="ApplyButton_Click">Apply</Button>
            </UniformGrid>
        </ContentControl>
        <TabControl>
            <TabItem Header="General">
                <StackPanel Orientation="Vertical">
                    <GroupBox Header="Interface">
                        <StackPanel Orientation="Vertical">
                            <DockPanel Style="{DynamicResource OptionButtonsRowPanelStyle}">
                                <TextBlock Style="{DynamicResource OptionSideLabelTextBlockStyle}" DockPanel.Dock="Left">Interface mode:</TextBlock>
                                <ComboBox x:Name="InterfaceModeComboBox">
                                    <ComboBoxItem>Command Bar</ComboBoxItem>
                                    <ComboBoxItem>Ribbon</ComboBoxItem>
                                </ComboBox>
                            </DockPanel>
                            <ui:ToggleSwitch x:Name="TitlebarTextToggleSwitch" TrueText="Show" FalseText="Hide" IsTabStop="False">Show Current Folder in Titlebar</ui:ToggleSwitch>
                            <ui:ToggleSwitch x:Name="StatusBarToggleSwitch" TrueText="Show" FalseText="Hide" IsTabStop="False">Show Status Bar</ui:ToggleSwitch>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Header="Browse folders" IsEnabled="False">
                        <StackPanel Orientation="Vertical">
                            <RadioButton GroupName="BrowseFoldersRadioButtons">Open each folder in the same window</RadioButton>
                            <RadioButton GroupName="BrowseFoldersRadioButtons">Open each folder in its own window</RadioButton>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Header="Click items as follows" IsEnabled="False">
                        <StackPanel Orientation="Vertical">
                            <RadioButton GroupName="ItemOpenModeRadioButtons">Single-click to open an item (point to select)</RadioButton>
                            <RadioButton GroupName="ItemOpenModeRadioButtons">Double-click to open an item (single-click to select)</RadioButton>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Header="Click items as follows" IsEnabled="False">
                        <StackPanel Orientation="Vertical">
                            <CheckBox>Show all folders</CheckBox>
                            <CheckBox>Automatically expand to current folder</CheckBox>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </TabItem>
            <TabItem Header="View" IsEnabled="False">

            </TabItem>
            <TabItem Header="Search" IsEnabled="False">

            </TabItem>
        </TabControl>
    </DockPanel>
</win:DecoratableWindow>